@using Microsoft.AspNet.Identity
@using System.Globalization;
<header class="main-header">
    <a @*target="_blank"*@ style="cursor:pointer" data-toggle="modal" data-target="#modalAcercaDe" @*href="http://www.loguisoft.com"*@ class="logo">
        <span class="logo-mini"><b></b>LS</span>
        <span class="logo-lg"><img class="logo-menu noImprimirMenu" src="~/LogoSoloBlanco.png" /></span>
    </a>

    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="empresaActual">
            <ul class="nav navbar-nav" style="margin: 0px;">
                <li class="dropdown user user-menu">
                    <a class="dropdown-toggle padding15" data-toggle="dropdown">
                        <span class="hidden-empresaActual acortarTexto" id="nombreEmpresa" style="font-size:15px;">Empresa: </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu" style="margin-right:10px">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/img/imgUsuario.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs">@User.Identity.GetUserName()</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="~/Content/img/imgUsuario.jpg" class="img-circle" alt="User Image">
                            <p>
                                @DateTime.Now.ToString("ddd dd 'de' MMMM 'de' yyyy", CultureInfo.CreateSpecificCulture("es-AR"))
                            </p>
                        </li>
                        <li class="user-footer">

                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="pull-left">
                                    <a href="~/Manage/Perfil" class="btn btn-default btn-flat pull-left">Perfil</a>
                                    @*<a href="~/Manage/ChangePassword" class="btn btn-default btn-flat pull-left">Contraseña</a>*@
                                </div>
                                <div class="pull-right">
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat pull-right">Cerrar Sesión</a>
                                </div>
                            }
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>