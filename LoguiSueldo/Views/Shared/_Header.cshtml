@using System.Globalization
<header class="main-header">
    <a style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#modalAcercaDe" class="logo">
        <span class="logo-mini"><b></b>LS</span>
        <span class="logo-lg"><img class="logo-menu noImprimirMenu" src="~/img/LogoSoloBlanco.png" /></span>
    </a>

    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-bs-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="empresaActual">
            <ul class="nav navbar-nav" style="margin: 0px;">
                <li class="dropdown user user-menu">
                    <a class="dropdown-toggle padding15" data-bs-toggle="dropdown">
                        <span class="hidden-empresaActual acortarTexto" id="nombreEmpresa" style="font-size:15px;">Empresa: </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu" style="margin-right:10px">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                        <img src="~/img/imgUsuario.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs">@User.Identity.Name</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="~/img/imgUsuario.jpg" class="img-circle" alt="User Image">
                            <p>
                                @DateTime.Now.ToString("ddd dd 'de' MMMM 'de' yyyy", CultureInfo.CreateSpecificCulture("es-AR"))
                            </p>
                        </li>
                        <li class="user-footer">
                            <form method="post" asp-page="/Account/Logout" id="logoutForm">
                                <div class="pull-left">
                                    <a href="~/Manage/Perfil" class="btn btn-default btn-flat pull-left">Perfil</a>
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-default btn-flat pull-right">Cerrar Sesión</button>
                                </div>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>